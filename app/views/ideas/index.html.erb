<div class="page-header">
  <h1>Ideas<small> ...change the world</small></h1>
</div>

<ul class="list-group">
<% @ideas.each do |idea| %>
  <li class="list-group-item">
        <%= image_tag(idea.image_url, class: 'img-thumbnail')%>
        <div>
          <h4><%= idea.title %></h4>
          <%= idea.description %>
        </div>
        <div class="btn-group btn-group-sm">
          <%= link_to 'Show', idea, class: "btn btn-info" %>
          <%= link_to 'Edit', edit_idea_path(idea), class: "btn btn-warning" %>
          <%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </div>
        <small><%= time_ago_in_words(idea.updated_at) %></small>
        <p class="badge"> comments: <span>0</span></p>
  </li>
<% end %>  
</ul>

